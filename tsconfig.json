{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"baseUrl": "./src",
		"paths": {
			"objects": ["objects/*"],
			"lib": ["lib/*"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true
	},
	"include": ["src"]
}
